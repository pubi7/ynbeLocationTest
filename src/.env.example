# Weve Site Integration Configuration
# Copy this file to .env and update with your actual values

# Weve API URL - The base URL for Weve e-commerce site API
WEVE_API_URL=https://api.weve.mn/api

# Weve API Key (optional - if your Weve API requires an API key)
WEVE_API_KEY=your_weve_api_key_here

# Request timeout in milliseconds (default: 30000 = 30 seconds)
WEVE_API_TIMEOUT=30000

# Mock Mode - Set to "false" to use real Weve API, "true" or leave empty for mock mode
# In mock mode, the service will return mock responses without calling the real API
WEVE_MOCK_MODE=true
